<% include ../admin-head %>

<body class="theme-green">
    <!-- Page Loader -->
    <% include ../admin-page-loader %>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Top Bar -->
    <% include ../top-nav %>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <% include ../admin-left-sidebar %>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
        <% include ../admin-right-sidebar %>
        <!-- #END# Right Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Available Product Forms</h2>
            </div>
            <!-- Available Product Form by District -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>Post for Available Products By District</h2>
                        </div>
                        <div class="body">
                            <!-- message -->
                            <% include ../messages %>
                            <!-- end of message -->
                            <form method="POST" action="/admin/post/new/product/district" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <select class="form-control show-tick" name="district">
                                            <option value="" class="gray-text" required disabled selected>Choose a
                                                District
                                            </option>
                                            <option id="DIST_WAU" value="Western Area Urban">Western Area Urban</option>
                                            <option id="DIST_WAR" value="Western Area Rural">Western Area Rural</option>
                                            <option id="DIST_FAL" value="Falaba">Falaba</option>
                                            <option id="DIST_KOI" value="Koinadugu">Koinadugu</option>
                                            <option id="DIST_BOM" value="Bombali">Bombali</option>
                                            <option id="DIST_TON" value="Tonkolili">Tonkolili</option>
                                            <option id="DIST_KAM" value="Kambia">Kambia</option>
                                            <option id="DIST_KAR" value="Karene">Karene</option>
                                            <option id="DIST_POR" value="Port Loko">Porto Loko</option>
                                            <option id="DIST_BO" value="Bo">Bo</option>
                                            <option id="DIST_BON" value="Bonthe">Bonthe</option>
                                            <option id="DIST_PUJ" value="Pujehun">Pujehun</option>
                                            <option id="DIST_MOY" value="Moyamba">Moyamba</option>
                                            <option id="DIST_KEN" value="Kenema">Kenema</option>
                                            <option id="DIST_KAL" value="Kaliahun">Kaliahun</option>
                                            <option id="DIST_KON" value="Kono">Kono</option>
                                        </select>
                                    </div>
                                    <div class="col-sm-4">
                                        <select class="form-control" name="product">
                                            <option value="" class="gray-text" required disabled selected>Choose a
                                                product</option>
                                            <option name="product" id="rice">Rice</option>
                                            <option name="product" id="cacao">Cacao</option>
                                            <option name="product" id="coffee">Coffee</option>
                                            <option name="product" id="palmoil">Palmoil</option>
                                            <option name="product" id="cassava">Cassava</option>
                                            <option name="product" id="sweetPotato">Sweet Potato</option>
                                            <option name="product" id="maize">Maize</option>
                                            <option name="product" id="groundnut">Groundnut</option>
                                        </select>
                                    </div>
                                    <div class="col s12 m4">
                                        <label for="quantity">Quantity</label>
                                        <input id="quantity" type="text" class="validate" name="quantity" required>
                                    </div>
                                </div>
                                <input class="btn-small btn-enum blue" type="submit" value="PUBLISH">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Available Product Form by District-->

            <!-- Available Product Form -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <h2>Post for Available Products for sale (general)</h2>
                        </div>
                        <div class="body">
                            <form method="POST" action="/admin/post/new/product/available"
                                enctype="multipart/form-data">
                                <!-- message -->
                                <% include ../messages %>
                                <!-- end of message -->
                                <div class="row">
                                    <!-- <div class="input-field col s12 m4">
                                        <i class="material-icons prefix"></i>
                                        <label for="district">District</label>
                                        <input id="district" type="text" class="validate" name="district" required>
                                    </div> -->
                                    <div class="input-field col s12 m3">
                                        <label for="product">Product Name</label>
                                        <input id="product" type="text" class="validate" name="product" required>
                                    </div>
                                    <div class="input-field col s12 m4">
                                        <label for="fbo">FBO's Name</label>
                                        <input id="fbo" type="text" class="validate" name="fbo" required>
                                    </div>
                                    <div class="col-sm-4 col s12 m3">
                                        <select class="form-control show-tick" name="district">
                                            <option value="" class="gray-text" required disabled selected>Choose a
                                                District
                                            </option>
                                            <option id="DIST_WAU" value="Western Area Urban">Western Area Urban</option>
                                            <option id="DIST_WAR" value="Western Area Rural">Western Area Rural</option>
                                            <option id="DIST_FAL" value="Falaba">Falaba</option>
                                            <option id="DIST_KOI" value="Koinadugu">Koinadugu</option>
                                            <option id="DIST_BOM" value="Bombali">Bombali</option>
                                            <option id="DIST_TON" value="Tonkolili">Tonkolili</option>
                                            <option id="DIST_KAM" value="Kambia">Kambia</option>
                                            <option id="DIST_KAR" value="Karene">Karene</option>
                                            <option id="DIST_POR" value="Porto Loko">Porto Loko</option>
                                            <option id="DIST_BO" value="Bo">Bo</option>
                                            <option id="DIST_BON" value="Bonthe">Bonthe</option>
                                            <option id="DIST_PUJ" value="Pujehun">Pujehun</option>
                                            <option id="DIST_MOY" value="Moyamba">Moyamba</option>
                                            <option id="DIST_KEN" value="Kenema">Kenema</option>
                                            <option id="DIST_KAL" value="Kaliahun">Kaliahun</option>
                                            <option id="DIST_KON" value="Kono">Kono</option>
                                        </select>
                                    </div>
                                    <div class="file-field input-field col s12 m2">
                                        <div class="btn">
                                            <span>Upload Photo</span>
                                            <input type="file" id="uploadedFile" name="uploadedFile">
                                        </div>
                                        <div class="file-path-wrapper">
                                            <input class="file-path validate" type="text">
                                        </div>
                                    </div>
                                </div>
                                <input class="btn-small btn-enum blue" type="submit" value="PUBLISH">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Available Product Form -->

        </div>
    </section>

    <% include ../admin-jslinks.ejs %>
</body>

</html>