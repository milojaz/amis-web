<% include ../admin-head %>
<body class="theme-green">
    <!-- Page Loader -->
    <% include ../admin-page-loader %>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Top Bar -->
    <% include ../top-nav %>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <% include ../admin-left-sidebar %>
        <!-- #END# Left Sidebar -->
        <!-- Right Sidebar -->
        <% include ../admin-right-sidebar %>
        <!-- #END# Right Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <h2>Agricultural Learning Information Edit Section</h2>
            </div>
            <!-- Agricultural Learning Information Edit Section Form -->
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="header">
                            <small>Make your changes to the form and update the record.</small>
                        </div>
                        <div class="body">
                            <!-- message -->
                            <% include ../messages %> 
                            <!-- end of message -->
                            <form method="POST" action="/admin/learning-info/edit/<%= fetchedInfo._id %>" id="aboutDisplayForm"> 
                                <div class="row">
                                    <div class="container">
                                    <div class="row">
                                        <div class="input-field col s12 m10">
                                            <label for="info_heading">Title</label>
                                            <input type="text" name="info_heading" value=<%= fetchedInfo.title %>>
                                        </div>
                                        <div class="input-field col s12 m12">
                                            <label for="info_content">Info Content goes here...</label>
                                            <textarea class="materialize-textarea" type="text" name="info_content"><%= fetchedInfo.content %></textarea>
                                        </div>
                                    </div>
                                    <input class="btn-small btn-warning" type="submit" value="UPDATE">
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Agricultural Learning Information Edit Section Form -->
        </div>
    </section>

    <% include ../admin-jslinks.ejs %>
  </body>

  </html>
