<% include ../admin-head %>

    <body class="theme-green">
        <!-- Page Loader -->
        <% include ../admin-page-loader %>
            <!-- #END# Page Loader -->
            <!-- Overlay For Sidebars -->
            <div class="overlay"></div>
            <!-- #END# Overlay For Sidebars -->
            <!-- Top Bar -->
            <% include ../top-nav %>
                <!-- #Top Bar -->
                <section>
                    <!-- Left Sidebar -->
                    <% include ../admin-left-sidebar %>
                        <!-- #END# Left Sidebar -->
                        <!-- Right Sidebar -->
                        <% include ../admin-right-sidebar %>
                            <!-- #END# Right Sidebar -->
                </section>

                <section class="content">
                    <div class="container-fluid">
                        <div class="block-header">
                            <h2>About AMIS Information</h2>
                        </div>
                        <div class="row clearfix">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="card">
                                    <div class="header">
                                        <small>Fill the form below to post an information.</small>
                                    </div>
                                    <div class="body">
                                        <!-- message -->
                                        <% include ../messages %>
                                            <!-- end of message -->
                                            <form method="POST" action="/admin/about" id="aboutDisplayForm">
                                                <div class="row">
                                                    <div class="container">
                                                        <div class="row">
                                                            <div class="input-field col s12 m10">
                                                                <label for="about_heading">Title</label>
                                                                <input type="text" name="about_heading" value="">
                                                            </div>
                                                            <div class="input-field col s12 m12">
                                                                <label for="info_content">Info Content goes here...</label>
                                                                <textarea class="materialize-textarea" type="text" name="about_content"></textarea>
                                                            </div>
                                                        </div>
                                                        <input class="btn-small btn-enum blue" type="submit" value="POST">
                                                    </div>
                                                </div>
                                            </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- kkkkkkkk -->
                        <div class="row clearfix">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="card">
                                    <div class="header">
                                        <small>Below is the about AMIS information. Click on the edit button to change the
                                information.</small>
                                    </div>
                                    <div class="body">
                                        <div class="table-responsive">
                                            <!-- messages -->
                                            <% include ../messages %>
                                                <!-- end of messages -->
                                                <table class="table table-bordered table-striped table-hover dataTable">
                                                    <thead>
                                                        <tr>
                                                            <th>TITLE</th>
                                                            <th>DESCRIPTION</th>
                                                            <th>ACTIONS</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <!-- looping through the posts -->
                                                        <% fetchedAbout.forEach(about => { %>
                                                            <div class="row">
                                                                <div class="container">
                                                                    <div class="row">
                                                                        <div class="input-field col s12 m10">
                                                                            <label for="about_heading">About Heading</label>
                                                                            <input type="text" name="about_heading" disabled value="<%= about.title %>">
                                                                        </div>
                                                                        <div class="input-field col s12 m12">
                                                                            <label for="about_content">About Content</label>
                                                                            <textarea class="materialize-textarea" disabled type="text" name="about_content"><%= about.content %>
                                            </textarea>
                                                                        </div>
                                                                    </div>
                                                                    <form action="/admin/about/edit/<%= about._id %>" method="GET">
                                                                        <button class="btn-small btn-warning" type="submit">Edit About</button>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                            <% }); %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- about section Form -->
                        </div>
                </section>

                <% include ../admin-jslinks.ejs %>
    </body>

    </html>